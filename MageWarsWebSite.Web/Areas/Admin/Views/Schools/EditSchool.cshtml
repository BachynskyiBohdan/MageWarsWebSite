@model School
@{
    ViewBag.Title = GlobalRes.EditSchool;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @* Navigation header *@
            <div class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink(GlobalRes.MainPage, "Index")</li>
                            <li>@Html.ActionLink(GlobalRes.AddSchool, "AddSchool")</li>
                            <li>@Html.ActionLink(GlobalRes.AddSchoolsByParse, "AddSchoolsByParse")</li>
                            <li class="active">@Html.ActionLink(GlobalRes.EditSchool, "EditSchool", new { id = Model.Id })</li>
                            <li>@Html.ActionLink(GlobalRes.DeleteSchool, "DeleteSchool", new { id = Model.Id })</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1 class="text-center">@GlobalRes.EditSchool: @Model.Name</h1>
            <br />
            <div class="form-container">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()
                    @Html.HiddenFor(x => x.Id)
                    <div class="form-group">
                        @Html.LabelFor(x => x.Name)
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" class="btn btn-info" value="@GlobalRes.SubmitChanges" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
